@model IEnumerable<AppStudent.MVC.Models.Student>
<div class="container p-3"></div>
<div class="row pt-4">
    <div class="col-6">
        <h2 class="text-primary"> Student List</h2>
    </div>
    <div class="col-6">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> &nbsp; Create New Student
        </a>
    </div>
</div>
<br /><br />
@if (Model.Count() > 0)
{
    <table class="table table-border table-striped" style="width: 100%">
        <thead>
            <tr>
                <th>
                    Student Id
                </th>
                <th>
                    Name
                </th>
                <th>
                    Email
                </th>
                <th>
                    Class
                </th>
                <th></th>
            </tr>
        </thead>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="20%">@obj.id</td>
                <td width="30%">@obj.name</td>
                <td width="20%">@obj.email</td>
                <td width="20%">@obj.Class_SV.NameLop</td>
                <td class="text-center">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Student" asp-route-Id="@obj.id" asp-action="Edit" class="btn btn-primary mx-2">
                            Edit
                        </a>
                        <a asp-controller="Student" asp-route-Id="@obj.id" asp-action="Delete" class="btn btn-danger mx-2">
                            Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </table>
}
else
{
    <p>No student exists.</p>
}
</div>
